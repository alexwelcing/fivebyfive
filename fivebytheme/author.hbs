{{!< default}}
<div class="mnmd-block mnmd-block--fullwidth author-page">
    <div class="container">
        <div class="row">
            <div class="mnmd-main-col" role="main">
                {{#author}}
                <div class="author-box">
                    <div class="author-box__image">
                        {{#if profile_image}}
                            <div class="author-avatar">
                                <img
                                    src="{{profile_image}}"
                                    class="avatar avatar-180 photo avatar photo"
                                />
                            </div>
                        {{/if}}
                    </div>
                    <div class="author-box__text">
                        <div class="author-name meta-font">
                            <a href="{{url}}" title="Posts by {{name}}" rel="author">{{name}}</a>
                        </div>
                        <div class="author-bio">{{bio}}</div>
                        <div class="author-info">
                            <div class="row row--flex row--vertical-center grid-gutter-20">
                                <div class="author-socials col-xs-12">
                                    <ul class="list-unstyled list-horizontal list-space-sm">
                                        {{#if twitter}}
                                            <li>
                                                <a href="https://twitter.com/{{twitter}}" target="_blank" rel="noopener noreferrer">
                                                    {{> icons/twitter}}
                                                </a>
                                            </li>
                                        {{/if}}

                                        {{#if location}}
                                        <li><a href="{{location}}" target="_blank">{{> icons/address}}</a>
                                        </li>
                                        {{/if}}

                                        {{#if website}}
                                        <li><a href="{{website}}" target="_blank">{{> icons/website}}</a>
                                        </li>
                                        {{/if}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{/author}}
                <div class="spacer-lg"></div>

                <div class="mnmd-block">
                    <div class="posts-list list-space-xl row mnmd-post--horizontal post-feed">
                        {{#foreach posts}}
                        <div class="list-item col-xs-6 small-post-vertrical feed">
                            <article class="post post--vertical post-santoni height-md">
                                {{#if feature_image}}
                                <div class="post__thumb">
                                    <div class="background-img" style="background-image: url({{img_url feature_image size="m"}});"></div>
                                    <a class="link-overlay" href="{{url}}"></a>
                                </div>
                                {{/if}}
                                <div class="post__text">
                                    <!--  post-text-middle    -->
                                    {{#primary_tag}}
                                    <a class="post__cat" href="{{url}}">{{name}}</a>
                                    {{/primary_tag}}
                                    <h3 class="post__title">
                                        <a href="{{url}}">{{title}}</a>
                                    </h3>
                                    <div class="post__excerpt">
                                        {{excerpt words="15"}}
                                    </div>
                                    <div class="post-meta-more clearfix">
                                        <div class="post__meta post__meta-bottom">
                                            {{#primary_author}}
                                            <span class="entry-author">{{t "By"}} <a href="{{url}}" class="entry-author__name">{{name}}</a></span>
                                            {{/primary_author}}
                                            <time class="time published" datetime="{{date published_at}}" title="{{date published_at}}">{{date published_at}}</time>
                                        </div>
                                        <div class="post__readmore clearfix">
                                            <a href="{{url}}" class="button__readmore"><i class="mdicon mdicon-arrow_forward"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        {{/foreach}}
                    </div>
                    {{pagination}}
                </div>
                <!-- .mnmd-block -->
            </div>
            <!-- .mnmd-main-col -->

            <div class="mnmd-sub-col mnmd-sub-col--right sidebar js-sticky-sidebar" role="complementary">
                {{> sidebar }}
            </div>
            <!-- .mnmd-sub-col -->
        </div>
        <!-- .row -->
    </div>
    <!-- .container -->
</div>
{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{/contentFor}}