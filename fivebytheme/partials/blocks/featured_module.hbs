{{#get "posts" include="tags,authors" filter="featured:true" limit="2" as |featured|}}
    {{#if featured}}
    <div class="mnmd-block mnmd-block--fullwidth mnmd-post-grid-featured">
        <div class="container">
            <div class="mnmd-block__inner post-grid-featured__inner">
                {{#foreach featured}}
                <!--large-post-grid-featured -->
                {{#has number = "1"}}
                <div class="big-post-grid-featured">
                    <article class="post post--vertical post-santoni height-xl">
                        <div class="post__text">
                            {{#primary_tag}}
                            <a class="post__cat" href="{{url}}">{{name}}</a>
                            {{/primary_tag}}
                            <div class="post__title-wrap">
                                <h3 class="post__title"><a href="{{url}}">{{title}}</a></h3>
                            </div>
                        </div>
                        {{#if feature_image}}
                        <div class="post__thumb">
                            <div class="background-img" style="background-image: url({{img_url feature_image size="m"}});"></div>
                            <a class="link-overlay" href="{{url}}"></a>
                        </div>
                        {{/if}}
                    </article>
                </div>
                {{else}}
                <!--small-post-grid-featured -->
                <div class="small-post-grid-featured">
                    <article class="post post--vertical post-santoni height-lg">
                        {{#if feature_image}}
                        <div class="post__thumb">
                            <div class="background-img" style="background-image: url({{img_url feature_image size="m"}});"></div>
                            <a class="link-overlay" href="{{url}}"></a>
                        </div>
                        {{/if}}
                        <div class="post__text post-text-middle">
                            {{#primary_author}} 
                            <div class="author__avatar">
                                <div class="background-img" style="background: url({{img_url profile_image size="xs"}});"></div>
                                <a class="link-overlay" href="{{url}}"> </a>
                            </div>
                            {{/primary_author}}
                            <div class="post__text-wrap">
                                <h3 class="post__title"><a href="{{url}}">{{title}}</a></h3>
                                <div class="post__meta">
                                    <time class="time published" datetime="{{date published_at}}" title="{{date published_at}}">{{date published_at}}</time>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
                <!-- end small-post-grid-featured -->
                {{/has}}
                {{/foreach}}
            </div>
        </div>
    </div>
    {{/if}}
{{/get}}