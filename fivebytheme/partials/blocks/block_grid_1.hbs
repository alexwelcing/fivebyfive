{{#get "posts" include="tags"  filter="tags:[fashion]" limit="4" as |Post_Grid|}}
{{#if Post_Grid}}
<div class="mnmd-block mnmd-block--fullwidth mnmd-post-grid-a">
    <div class="container">
        <div class="mnmd-block__inner post-grid-a__inner">
            <div class="block-heading santoni-heading">
                <h4 class="block-heading__title">{{t "NEWS"}}</h4>
            </div>
            <div class="mnmd-block__wrap post-grid-a__wrap">
                <div class="row">
                    {{#foreach  Post_Grid}}
                    {{#has number = "1"}}
                    <div class="col-lg-8 col-md-8 post-grid--horizontal-mobile">
                        <div class="post-grid-a--horizontal">
                            <article class="post post--horizontal post--horizontal-sm post--horizontal-reverse post-santoni thumb-wrap-xxl">
                                {{#if feature_image}}
                                <div class="post__thumb">
                                    <div class="post__thumb-wrap">
                                        <div class="background-img" style="background-image: url({{img_url feature_image size="m"}});"></div>

                                        <a class="link-overlay" href="{{url}}"></a>
                                    </div>
                                    <div class="post-date">
                                        <time class="time published" datetime="{{date published_at}}" title="{{date published_at}}">
                                            <p class="post-day">{{date published_at format="DD"}}</p>
                                            <span class="post-year"> {{date published_at format="MMMM"}}</span>
                                        </time>
                                    </div>
                                </div>
                                {{/if}}
                                <div class="post__text">
                                    <div class="post__text-wrap">
                                        {{#primary_tag}}
                                        <a class="post__cat" href="{{url}}">{{name}}</a>
                                        {{/primary_tag}}
                                        <h3 class="post__title">
                                            <a href="{{url}}">{{title}}</a>
                                        </h3>
                                        <div class="post__excerpt">
                                            {{excerpt words="15"}}
                                        </div>

                                        <div class="post__readmore readmore-style-2 clearfix">
                                            <a href="{{url}}" class="button__readmore"><span class="readmore__text">{{t "Read More"}}</span> </a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                    {{else}}
                    {{#has number = "2"}}
                    <div class="col-lg-4 col-md-4">
                        <div class="post-a-horizontal--list">
                            <div class="block-heading">
                                <h4 class="block-heading__title">{{t "FASHION NEWS"}}</h4>
                                <p class="sub-heading__title">
                                    {{t "Sed do eiusmod tempor"}}
                                </p>
                            </div>
                            <div class="post-a-horizontal__content">
                                <ul class="posts-list list-unstyled post-santoni cat-1">
                    {{/has}}
                                    <li>
                                        <article class="post post--horizontal post--horizontal-middle post--horizontal-xs">
                                            {{#if feature_image}}
                                            <div class="post__thumb post__thumb-100 post__thumb--circle atbs-thumb-object-fit">
                                                <a href="{{url}}"><img src="{{img_url feature_image size="xs"}}" alt="image" /></a>
                                            </div>
                                            {{/if}}
                                            <div class="post__text">
                                                {{#primary_tag}}
                                                <a class="post__cat" href="{{url}}">{{name}}</a>
                                                {{/primary_tag}}
                                                <h3 class="post__title typescale-1"><a href="{{url}}">{{title}}</a></h3>
                                            </div>
                                        </article>
                                    </li>
                    {{#if @last}}
                                </ul>
                                <div class="viewall clearfix text-center">
                                {{#primary_tag}}
                                    <a href="{{url}}" class="button__readmore">
                                        <span class="readmore__text">{{t "View More"}}</span>
                                        <i class="mdicon mdicon-navigate_next"></i>
                                    </a>
                                {{/primary_tag}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    {{/has}}
                    {{/foreach}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{/get}}