{{#get "posts" limit="4" as |widgetpostarticle|}}
    {{#if widgetpostarticle}}
    <div class="mnmd-widget widget widget-posts-list">
        <div class="widget__inner widget-posts-list__inner">
            <div class="widget__title">
                <h4 class="widget__title-text">{{t "TRENDING"}}</h4>
                <p class="sub-heading__title">{{t "Sed do eiusmod tempor"}}</p>
            </div>
            <div class="widget__wrap widget-posts-list__wrap clearfix">
                <ul class="posts-list list-space-md list-unstyled">
                    {{#foreach widgetpostarticle}}
                    {{#has number = "1"}}
                    <li class="widget-posts-list__item widget-big-posts-list__item widget-big-posts-list__item-style-1">
                        <article class="post post--vertical height-sm post-santoni">
                            {{#if feature_image}}
                            <div class="post__thumb">
                                <div class="background-img" style="background-image: url({{img_url feature_image size="s"}});"></div>
                                <a class="link-overlay" href="{{url}}"></a>
                            </div>
                            {{/if}}
                            <div class="post__text">
                                {{#primary_tag}}
                                <a class="post__cat" href="{{url}}">{{name}}</a>
                                {{/primary_tag}}
                                <h3 class="post__title"><a href="{{url}}">{{title}}</a></h3>
                                <div class="post__excerpt">
                                    {{excerpt words="10"}}
                                </div>
                            </div>
                        </article>
                    </li>
                    <!-- list post horizontal -->
                    {{else}}
                    <li class="widget-posts-list__item">
                        <article class="post post--horizontal post--horizontal-xxs height-xxs post--horizontal-middle post-santoni">
                            {{#if feature_image}}
                            <div class="post__thumb">
                                <div class="background-img" style="background-image: url({{img_url feature_image size="s"}});"></div>
                                <a class="link-overlay" href="{{url}}"></a>
                            </div>
                            {{/if}}
                            <div class="post__text">
                                <h3 class="post__title"><a href="{{url}}">{{title}}</a></h3>
                                <div class="post-meta">
                                    <time class="time published" datetime="{{date published_at}}" title="{{date published_at}}">{{date published_at}}</time>
                                </div>
                            </div>
                        </article>
                    </li>
                    {{/has}}
                    {{/foreach}}
                </ul>
            </div>
        </div>
    </div>
    {{/if}}
{{/get}}